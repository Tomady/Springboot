<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travelmaker.board.mapper.BoardMapper">
    <sql id="criteria">
        <trim prefix="(" suffix=") AND " prefixOverrides="OR">
            <foreach item="type" collection="typeArr">
                <trim prefix="OR">
                    <choose>
                        <when test="type == 'T'.toString()">
                            title like '%'||#{keyword}||'%'
                        </when>
                        <when test="type == 'C'.toString()">
                            bcontent like '%'||#{keyword}||'%'
                        </when>
                        <when test="type == 'W'.toString()">
                            nickname like '%'||#{keyword}||'%'
                        </when>
                    </choose>
                </trim>
            </foreach>
        </trim>
    </sql>

    <select id="getListWithPaging" resultType="com.travelmaker.board.domain.BoardVO">
        <![CDATA[
        select *
        from
            (select /*+ index_desc(bbs bbs_pk)*/ rownum rn, bbs_id, management_id, title, code_id, nickname, bcontent, status, hit, good, bad, plan_id, cdate, udate
            from bbs
            where
        ]]>

            <include refid="criteria"></include>

        <![CDATA[
            rownum <= #{pageNum} * #{amount}
            )
        where rn > (#{pageNum} - 1) * #{amount}
        ]]>
    </select>

    <select id="getTotalCount" resultType="int">
        select count(*) from bbs
        where
        <include refid="criteria"></include>

        bbs_id > 0
    </select>

</mapper>